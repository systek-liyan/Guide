<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@color/md_grey_300"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        android:background="@drawable/item_bg_exhibit_list_inner">
        <ImageView
            android:id="@+id/ivExhibitIcon"
            android:layout_width="@dimen/text_exhibit_item_icon_size"
            android:layout_height="@dimen/text_exhibit_item_icon_size"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/simple_4dp"
            android:layout_marginRight="@dimen/simple_4dp"
            android:layout_marginTop="@dimen/simple_4dp"
            android:layout_marginBottom="@dimen/simple_4dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <LinearLayout
                    android:id="@+id/llCollectionBtn"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivCollection"
                        style="@style/normal_image_view"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/iv_heart_empty" />
                    <TextView
                        android:textSize="@dimen/normal_textSize"
                        android:text="收藏"
                        android:layout_marginLeft="@dimen/simple_4dp"
                        android:layout_marginRight="@dimen/simple_4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_toStartOf="@id/llCollectionBtn"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvExhibitNumber"
                        android:textSize="@dimen/text_exhibit_item_name_size"
                        android:textColor="@color/my_own_red_300"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvExhibitName"
                        android:textSize="@dimen/text_exhibit_item_name_size"
                        android:textColor="@color/my_own_red_300"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/tvExhibitYears"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_exhibit_item_label_size"
                android:layout_height="0dp"
                android:layout_weight="3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/tvExhibitPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_exhibit_item_label_size"
                    android:layout_weight="2"/>
                <TextView
                    android:id="@+id/tvExhibitDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_weight="2"/>

                <ImageView
                    android:id="@+id/ivPlayAnim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/simple_4dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="@dimen/simple_4dp"
                android:clickable="false"
                android:layout_gravity="bottom"
                android:focusable="false"
                android:layout_marginTop="4dp"
                android:focusableInTouchMode="false"
                android:descendantFocusability="blocksDescendants"
                android:background="@color/md_grey_300"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
