<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/title_bar_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/titleBarDrawer"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                style="@style/normal_image_view"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/simple_4dp"/>
            <TextView
                android:id="@+id/titleBarTopic"
                android:textSize="@dimen/title_bar_title"
                style="@style/text_view_title_bar"/>
            <ImageView
                android:id="@+id/titleBarRightImg"
                style="@style/normal_image_view"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/simple_4dp"/>
        </RelativeLayout>


</RelativeLayout>
