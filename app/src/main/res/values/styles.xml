<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="base_image_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="normal_image_view" parent="base_image_view">
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="FullscreenTheme" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus"/>

    <style name="base_text_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="normal_text_view" parent="base_text_view">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">@dimen/normal_textSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>



    <!--tv_home_menu -->
    <style name="tv_home_menu" >
        <item name="android:textSize">@dimen/normal_textSize</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="tv_topic_label" >
        <item name="android:textSize">@dimen/topic_label_textSize</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tv_bg_topic_label</item>
    </style>

    <!--标题 text view -->
    <style name="text_view_title_bar">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">@dimen/normal_textSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="MyFullTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Here we setting appcompat’s actionBarStyle -->
        <item name="drawerArrowStyle">@style/Material.DrawerArrowStyle</item>
        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="colorPrimary">@color/materialize_primary</item>
        <item name="colorPrimaryDark">@color/materialize_primary_dark</item>
        <item name="colorAccent">@color/materialize_accent</item>
        <!-- Material specific values -->
    </style>


    <style name="LockScreenBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
