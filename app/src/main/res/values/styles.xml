<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--导航栏底色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏底色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--导航栏上的标题颜色-->
        <item name="android:textColorPrimary">@color/md_grey_850</item>
        <!--按钮选中或者点击获得焦点后的颜色-->
        <item name="colorAccent">@color/md_red_400</item>
        <!--和 colorAccent相反，正常状态下按钮的颜色-->
        <item name="colorControlNormal">@color/md_white_1000</item>
        <!--Activity窗口的颜色-->
        <item name="android:windowBackground">@color/material_drawer_background</item>
        <!--Button按钮正常状态颜色-->
        <item name="colorButtonNormal">@color/md_white_1000</item>
        <!--EditText 输入框中字体的颜色-->
        <item name="editTextColor">@color/md_grey_850</item>
        <item name="android:showAsAction">always</item>
        <item name="android:actionMenuTextColor">@color/md_grey_850</item>
        <!--字体-->
        <item name="android:typeface">serif</item>
        <!--侧边栏相关-->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/md_grey_800</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_dark_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_divider">@color/md_white_1000</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">@color/my_own_red_300</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_dark_primary_text</item>
        <item name="android:textColor">@color/my_own_red_300</item>

    </style>



    <style name="BlueAppTheme" parent="AppTheme">
        <!--导航栏底色-->
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <!--状态栏底色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <!--导航栏上的标题颜色-->
        <item name="android:textColorPrimary">@color/md_grey_850</item>
        <!--按钮选中或者点击获得焦点后的颜色-->
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="material_drawer_selected_text">@color/colorPrimaryBlue</item>

        <item name="android:textColor">@color/colorPrimaryBlue</item>

    </style>




    <style name="FullscreenTheme" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus">
        <item name="android:typeface">serif</item>
    </style>


    <style name="CustomTheme" parent="MaterialDrawerTheme.Light.TranslucentStatus">
        <!-- ...and here we setting appcompat’s color theme attrs -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item><!--#02A8F3-->
        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/md_grey_800</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_dark_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_divider">@color/md_white_1000</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">@color/my_own_red_300</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_dark_primary_text</item>
        <!-- CAB :D -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:typeface">serif</item>
    </style>




    <style name="base_image_view" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="normal_image_view" parent="base_image_view">
        <item name="android:scaleType">fitXY</item>
    </style>


    <style name="base_text_view" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>

    <style name="normal_text_view" parent="base_text_view">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">@dimen/normal_textSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--item name="android:layout_centerInParent">true</item-->
    </style>

    <!--tv_home_menu -->
    <style name="tv_home_menu" parent="AppTheme">
        <item name="android:textSize">@dimen/text_home_menu_size</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="tv_topic_label"  parent="AppTheme">
        <item name="android:textSize">@dimen/topic_label_textSize</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tv_bg_topic_label</item>
    </style>

    <!--标题 text view -->
    <style name="text_view_title_bar" parent="AppTheme">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">@dimen/normal_textSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>


    <style name="LockScreenBase" parent="FullscreenTheme"><!--Theme.AppCompat.Light.NoActionBar-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 黑色半透明窗口式对话框 -->
    <style name="WindowDialog" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>       <!--背景透明-->
        <item name="android:windowFrame">@null</item>                                 <!--边框-->
        <item name="android:windowNoTitle">true</item>                                <!--无标题-->
        <item name="android:windowIsFloating">true</item>                             <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item>                          <!--半透明-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>



</resources>