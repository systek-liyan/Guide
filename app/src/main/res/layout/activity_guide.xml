<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.systekcn.guide.activity.GuideActivity">

    <RelativeLayout
        android:id="@+id/rl_titleBar"
        style="@style/action_titleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal">


        <ImageView
            android:id="@+id/iv_titleBar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_bar_margin"
            android:src="@mipmap/title_bar_back" />

        <TextView
            android:id="@+id/iv_titleBar_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/title_bar_margin"
            android:background="@mipmap/title_bar_more"
            android:gravity="center_vertical|center_horizontal"
            android:src="@mipmap/switch_tab"/>

        <RadioGroup
            android:id="@+id/rg_guide_page_title"
            android:layout_width="123dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_guide_guide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/guide_btn_left_selected"
                android:button="@null"
                android:checked="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="导览"
                android:textColor="@drawable/text_color_guide_map_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rb_guide_map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/map_btn_right_selected"
                android:button="@null"
                android:gravity="center_vertical|center_horizontal"
                android:text="地图"
                android:textColor="@drawable/text_color_guide_map_selector"
                android:textSize="12sp" />
        </RadioGroup>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@id/rl_titleBar"
        android:id="@+id/guide_map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
