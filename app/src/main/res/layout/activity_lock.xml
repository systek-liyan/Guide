<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.systekcn.guide.activity.LockScreenActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_lock_screen"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_lock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:text="12:30"
            android:textColor="@color/white" />
        <TextView
            android:text="观音菩萨像"
            android:layout_gravity="center_horizontal"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_nearly"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:scrollbars="none"/>

            <ImageView
                android:id="@+id/fullscreen_image"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:src="@mipmap/other_bowuguan"
                android:layout_weight="5"
                android:layout_height="0dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:maxHeight="5dp"
                    android:minHeight="5dp"
                    android:max="10"
                    android:progress="5"
                    android:progressDrawable="@drawable/seek_bar_bg"
                    android:thumb="@drawable/thumb_bar_selector"/>

                <ImageView
                    android:id="@+id/iv_play_ctrl"
                    style="@style/normal_image_view"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/iv_play_state_stop_lock"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/normal_image_view"
                    android:src="@mipmap/iv_unlock_img_lock_screen"/>

                <TextView
                    android:text="滑动解锁"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
