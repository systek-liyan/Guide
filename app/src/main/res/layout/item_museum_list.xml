<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/item_bg_exhibit_list_inner"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/museumListIcon"
        android:layout_width="@dimen/item_museum_icon_size"
        android:layout_height="@dimen/item_museum_icon_size"
        android:scaleType="centerCrop"
        android:layout_margin="5dp" />
    <TextView
        android:layout_width="3dp"
        android:background="@color/md_grey_200"
        android:layout_margin="4dp"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/simple_4dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/museumName"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/normal_textSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>