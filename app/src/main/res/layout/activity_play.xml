<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.systekcn.guide.activity.PlayActivity">
    <ImageView
        android:id="@+id/ivPlayBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:alpha="0.25"
        android:src="@mipmap/bowuguan"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">
            <ImageView
                android:id="@+id/imgExhibitIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:scaleType="fitXY"
                android:src="@mipmap/bowuguan"/>
            <ListView
                android:id="@+id/lvLyric"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />
        </FrameLayout>
        <SeekBar
            android:id="@+id/seekBarProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:max="10"
            android:progress="5"
            android:progressDrawable="@drawable/bg_seek_bar"
            android:thumb="@drawable/thumb_bar"/>
        <TextView
            android:id="@+id/tvPlayTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:text="2:42"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginEnd="@dimen/simple_margin_4dp"
            android:layout_marginStart="@dimen/simple_margin_4dp"
            android:clickable="false"
            android:focusable="false"
            android:layout_marginTop="4dp"
            android:focusableInTouchMode="false"
            android:descendantFocusability="blocksDescendants"
            android:background="@color/lightGray"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleMultiAngle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:scrollbars="none"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1.5">
            <ImageView
                android:id="@+id/ivPlayCtrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/play_state_close_big"/>
            <ImageView
                android:id="@+id/imgWordCtrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:src="@mipmap/word_ctrl_play"/>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
