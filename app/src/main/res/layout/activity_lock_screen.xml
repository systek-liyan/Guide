<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="afterDescendants"
    android:background="@color/md_grey_700"
    tools:context=".activity.LockScreenActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fullscreen_bg_gradient"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLockTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:text="12:25"
            android:layout_marginTop="25dp"
            android:layout_marginStart="@dimen/simple_10dp"
            android:textColor="@color/md_white_1000" />
        <TextView
            android:id="@+id/tvExhibitName"
            android:layout_gravity="center_horizontal"
            android:textSize="17sp"
            android:text="司母戊鼎"
            android:textColor="@color/md_white_1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fullscreenImage"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="4.5"
                android:layout_height="0dp"/>

            <android.support.v7.widget.RecyclerView

                android:id="@+id/recycleNearly"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_marginTop="10dp"
                android:scrollbars="none"/>

            <SeekBar
                android:id="@+id/seekBarProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/simple_10dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:maxHeight="5dp"
                android:minHeight="5dp"
                android:progressDrawable="@drawable/seek_bar_bg"
                android:thumb="@drawable/thumb_bar_selector"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvPlayTime"
                        android:textColor="@color/md_white_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:textSize="@dimen/normal_textSize"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:id="@+id/tvTotalTime"
                        android:textColor="@color/md_white_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:textSize="@dimen/normal_textSize"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/ivPlayCtrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/uamp_ic_play_arrow_white_48dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/lock_screen_bottom_margin_top"
                    android:orientation="horizontal">
                    <!-- hint_unlock -->
                    <TextView  android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/md_white_1000"
                        android:text="@string/hint_unlock"/>
                    <!-- Arrow Animation -->
                    <ImageView android:id="@+id/getup_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:background="@anim/slider_tip_anim"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
