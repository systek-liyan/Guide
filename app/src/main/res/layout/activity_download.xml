<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.systekcn.guide.activity.DownloadActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_download_titleBar"
        style="@style/action_titleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_title"
            style="@style/style_titleBar_text"
            android:text="@string/title_activity_download"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_download_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:src="@mipmap/setting" />

        <TextView
            android:id="@+id/iv_home_page_guide"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:background="@mipmap/home_page_guide_button"
            android:src="@mipmap/switch_tab"
            android:text="@string/home_page_guide_button_text"
            android:textColor="@color/myWhite"
            android:textSize="@dimen/titleBar_small_textSize" />
    </RelativeLayout>
    <ListView
        android:id="@+id/lv_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
