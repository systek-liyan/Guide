<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.systek.guide.fragment.LyricFragment">
    <ListView
        android:id="@+id/lvLyric"
        android:divider="@null"
        android:scrollbars="none"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ScrollView
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvContent"
            android:visibility="gone"
            android:textSize="15sp"
            android:textColor="@color/md_white_1000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

    <ImageView
        android:id="@+id/ivWordCtrl"
        android:src="@drawable/iv_word_ctrl_switch"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/simple_10dp"
        android:layout_marginBottom="@dimen/simple_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</FrameLayout>
