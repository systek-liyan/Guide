<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/bg_title_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/title_bar_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/simple_margin_4dp"
                android:src="@mipmap/setting"/>
            <RadioGroup
                android:id="@+id/rg_nearly_page_title"
                android:layout_width="123dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_guide_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selected_guide_btn_left"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="列表"
                    android:textColor="@drawable/selector_text_color_guide_map"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rb_guide_map"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selected_map_btn_right"
                    android:button="@null"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="地图"
                    android:textColor="@drawable/selector_text_color_guide_map"
                    android:textSize="12sp" />
            </RadioGroup>
            <ImageView
                android:id="@+id/title_bar_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/simple_margin_4dp"
                android:src="@mipmap/search"/>
        </RelativeLayout>


</RelativeLayout>
