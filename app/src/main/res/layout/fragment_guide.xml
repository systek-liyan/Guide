<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.systekcn.guide.fragment.GuideFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_frag_guide_largest_img_height"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_frag_largest_img"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
            <FrameLayout
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/lyricShow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@color/myOrange"
                    android:gravity="center"
                    android:scrollbars="none" />
                <TextView
                    android:id="@+id/lyric_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="15dp"
                    android:text="没有歌词,点击手动下载"
                    android:textColor="@color/myRed"
                    android:textIsSelectable="false"
                    android:visibility="gone"
                    android:textSize="18sp"/>
            </FrameLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/guide_frag_hamburger_height"
            android:gravity="left|center_vertical"
            android:background="@color/myOrange">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/myWhite"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/guide_frag_hamburger_text_margin"
                android:text="@string/frag_hamburger_multi_angle"
                android:textSize="@dimen/guide_frag_hamburger_textSize"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/lyric_ctrl_btn_close"
                android:id="@+id/iv_lyric_ctrl"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/simple_margin_4dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/guide_frag_multi_angle_img_height">
            <LinearLayout
                android:id="@+id/ll_multi_angle_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>
        </HorizontalScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/guide_frag_hamburger_height"
            android:gravity="center_vertical"
            android:background="@color/myOrange">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/myWhite"
                android:layout_marginLeft="@dimen/guide_frag_hamburger_text_margin"
                android:text="@string/frag_hamburger_nearly_exhibit"
                android:textSize="@dimen/guide_frag_hamburger_textSize"/>
            <com.systekcn.guide.widget.SwitchButton
                android:id="@+id/btn_switch_topic"
                style="@style/Switch"
                android:layout_marginRight="@dimen/simple_margin_4dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/guide_frag_multi_angle_img_height">
            <LinearLayout
                android:id="@+id/ll_nearly_exhibit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>
        </HorizontalScrollView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/darkGray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/music_play_and_ctrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/simple_margin_4dp"
                android:background="@mipmap/media_play"/>
            <SeekBar
                android:id="@+id/music_seekBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/seekBar_height"
                android:layout_marginLeft="5dp"
                android:progressTint="@color/myOrange"
                android:thumb="@mipmap/seek_bar_thumb"
                android:progressBackgroundTint="@color/darkGray"
                android:layout_marginRight="@dimen/seekBar_margin_right"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
