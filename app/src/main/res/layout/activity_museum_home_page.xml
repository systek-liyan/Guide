<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/rl_home_page_museum_header"
    tools:context="com.systekcn.guide.activity.MuseumHomePageActivity">

    <RelativeLayout
        android:id="@+id/titleBar_title_text"
        style="@style/action_titleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_view_title_bar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_setting"
            style="@style/normal_image_view"
            android:layout_alignTop="@id/textView"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:src="@mipmap/setting" />

        <TextView
            android:id="@+id/iv_home_page_guide"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:background="@mipmap/iv_home_page_guide_button"
            android:src="@mipmap/iv_switch_tab"
            android:text="@string/home_page_guide_button_text"
            android:textColor="@color/white"
            android:textSize="@dimen/titleBar_small_textSize" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_home_page_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleBar_title_text" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/fm_home_page_flower_bottom_instance"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/home_page_guide_flower"
            style="@style/normal_image_view"
            android:src="@mipmap/iv_home_page_flower" />
    </FrameLayout>

</RelativeLayout>
