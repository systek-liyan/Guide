<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/largest_icon_height"
        android:id="@+id/iv_home_page_museumIcon"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="9sp"
            android:textColor="@color/white"
            android:background="@mipmap/iv_introduce"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_activity_home_page_hamburger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="164dp"/>
        <ImageView
            style="@style/normal_image_view"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/iv_home_page_text_open"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_home_page_search"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="@dimen/simple_48dp">

        <ImageView
            android:id="@+id/iv_museum_searching"
            style="@style/normal_image_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/simple_10dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/iv_search" />

        <EditText
            android:id="@+id/ed_museum_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/ed_museum_search_textSize"
            android:hint="@string/search_view_museum_hint"
            android:paddingLeft="48dp" />
    </RelativeLayout>
</LinearLayout>
